<h1>{{{article.title}}}</h1>

<p>
	id: {{article.id}}<br>
	<time>date: {{article.date}}</time>
</p>

<img src="{{article.wp:featuredmedia.media_details.sizes.thumbnail.source_url}}">

{{{article.content}}}

<h3>Categories</h3>
<ul>
	{{#each article.categories as |category|}}
		<li>{{link-to category.name 'categories.category' category.slug}}</li>
	{{/each}}
</ul>

<h3>Tags</h3>
<ul>
	{{#each article.tags as |tag|}}
		<li>{{tag.name}}</li>
	{{/each}}
</ul>



{{outlet}}
